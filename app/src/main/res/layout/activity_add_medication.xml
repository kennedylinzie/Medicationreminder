<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFF"
    android:orientation="horizontal"

    tools:context=".Add_medication">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/montserratregular"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="Add Prescription"
                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                android:textColor="#858484"
                android:textSize="25sp"
                android:typeface="normal" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/drug_show_giffy" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:textColorHint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_drug_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/spinnerback"
                    android:layout_marginBottom="5dp"
                    android:hint="Drug name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textSize="20sp"
                    android:typeface="normal"
                    android:textColorHint="#ffff"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <Button
                        android:id="@+id/button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="2"
                        android:background="@drawable/ic_baseline_photo_camera_24"
                        android:onClick="camera_work_text_extraction" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="2"
                        android:background="@drawable/ic_baseline_search_24"
                        android:onClick="search_medication_on_google" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="2"
                        android:background="@drawable/ic_baseline_qr_code_scanner_24"
                        android:onClick="scan_medication_on_google" />
                </LinearLayout>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:textColorHint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_at_a_time"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/spinnerback"
                    android:layout_marginBottom="5dp"
                    android:hint="At a time"
                    android:inputType="number"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textSize="20sp"
                    android:typeface="normal" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp"
                android:textColorHint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_total"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/spinnerback"
                    android:layout_marginBottom="5dp"
                    android:hint="Total number of drugs"
                    android:inputType="number"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textSize="20sp"
                    android:typeface="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp"
                android:textColorHint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_condition"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/spinnerback"
                    android:layout_marginBottom="5dp"
                    android:hint="Condition for taking medication"
                    android:inputType="textLongMessage"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textSize="20sp"
                    android:typeface="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="17dp"
                android:textColorHint="@color/black">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Times a day to take medication"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/teal_200"
                    android:textSize="15sp"
                    android:typeface="normal" />

                <Spinner
                    android:id="@+id/pres_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"

                    android:background="@drawable/spinnerback"
                    android:contentDescription="@string/action_copy"
                    android:popupBackground="@color/white"
                    android:popupElevation="2dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="17dp"
                android:textColorHint="@color/black">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Strength of drug"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/teal_200"
                    android:textSize="15sp"
                    android:typeface="normal" />

                <Spinner
                    android:id="@+id/strength_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinnerback"
                    android:contentDescription="@string/action_copy"
                    android:popupBackground="@color/white"
                    android:popupElevation="2dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp"
                android:textColorHint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_strength_amount"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/spinnerback"
                    android:layout_marginBottom="5dp"
                    android:hint="medication strength e.g 50g"
                    android:inputType="number"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:typeface="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp"
                android:textColorHint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_intake_method"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/spinnerback"
                    android:hint="method of taking"
                    android:inputType="textLongMessage"
                    android:text="Oral"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:typeface="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp"
                android:textColorHint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_if_pregnant"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/spinnerback"
                    android:hint="If pregnant"
                    android:inputType="textLongMessage"
                    android:text="Safe"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:typeface="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp"
                android:textColorHint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_if_breastfeeding"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/spinnerback"
                    android:hint="If breast feeding"
                    android:inputType="textLongMessage"
                    android:text="Safe"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:typeface="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp"
                android:textColorHint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_if_meal_or_without"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/spinnerback"
                    android:hint="Take with meal or without"
                    android:inputType="textLongMessage"
                    android:text="Take with food"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:typeface="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="0dp"
                android:background="@drawable/spinnerback"
                android:textColorHint="@color/black">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Drug refill required"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textColor="@color/teal_200"
                    android:textSize="15sp"
                    android:typeface="normal" />

                <RadioGroup
                    android:id="@+id/rGroup_drug_strength"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/rButton_yes"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Yes requires a refill" />

                    <RadioButton
                        android:id="@+id/rButton_no"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Does not require a refill" />
                </RadioGroup>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/pro_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/buttoshape"
                android:onClick="save_meds"
                android:text="Save"
                android:textColor="#FFFFFF"
                android:textStyle="normal" />


        </LinearLayout>
    </ScrollView>



</LinearLayout>