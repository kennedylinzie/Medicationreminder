<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60sp"
    android:layout_margin="5dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true"
    android:background="#673AB7">

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/active_imageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/single_med_back"
            app:civ_border_color="#00000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/med_tab_medname"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/active_imageview"
            android:fontFamily="@font/opensansregular"
            android:gravity="center_vertical"
            android:text="Panado"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="20dp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/med_tab_strength"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="262dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/active_imageview"
            android:fontFamily="@font/opensansregular"
            android:gravity="center_vertical"
            android:text="50 g"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="20dp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/med_tab_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@+id/active_imageview"
            android:fontFamily="@font/opensansregular"
            android:gravity="center_vertical"
            android:text="Condition"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="20dp"
            android:typeface="sans" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>